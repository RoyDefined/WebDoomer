{
  // WebDoomer options
  "WebDoomerOptions": {
    "MasterServer": {
      "MaximumPacketSize": 5000,
      "FetchTaskTimeout": 15000
    },

    "Server": {
      "EndPointsPerBuffer": 100,
      "MaximumPacketSize": 5000,
      "SocketSendBufferSize": 10000,
      "SocketReceiveBufferSize": 1000000000,
      "SendDelay": 100,
      "FetchTaskTimeout": 15000
    }
  },

  // Log configuration
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft.AspNetCore.Hosting": "Warning",
        "Microsoft.AspNetCore.Server": "Warning",
        "Microsoft.AspNetCore.Mvc": "Warning",

        "Microsoft.AspNetCore.HostFiltering": "Warning",

        "Microsoft.AspNetCore.Routing.Matching.DfaMatcher": "Warning",
        "Microsoft.AspNetCore.Routing.EndpointRoutingMiddleware": "Warning",

        "WebDoomer.Zandronum": "Information",
        "WebDoomer.QZandronum": "Information"
      }
    },

    "WriteTo": [

      // Log expression to log anything to the console.
      {
        "Name": "Console",
        "Args": {
          "formatter": {
            "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",

            // This template exposes more of the source context. Use this template when overriding minimum levels easier.
            //"template": "{@t:HH:mm:ss} {@l:u3} {Coalesce(SourceContext, 'Application')}\n{@m}\n{@x}",

            // Default template
            "template": "{@t:HH:mm:ss} {@l:u3} {Coalesce(Substring(SourceContext, LastIndexOf(SourceContext, '.') + 1), 'Application'), -30} {@m}\n{@x}",

            "theme": "Serilog.Templates.Themes.TemplateTheme::Code, Serilog.Expressions"
          }
        }
      }
    ]
  }
}
